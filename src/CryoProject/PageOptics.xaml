<Page x:Class="CryoProject.PageOptics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryoProject" xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Data Collection">

    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition Width="600"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="250"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- People list -->
        <Border Grid.Column="1" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label VerticalAlignment="Center" Foreground="White">Optics</Label>
        </Border>

        <Grid Grid.Column="1" Grid.Row="2" Background="White">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="37*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" ToolTip="{StaticResource PageOptics_Filter}" Content="Imaging Mode" />
            <ComboBox Margin="0" Grid.Column="2" Grid.Row="0" SelectedItem="{Binding Path=ImagingMode, Mode=TwoWay}">
                <sys:String>EFTEM</sys:String>
                <sys:String>TEM</sys:String>
            </ComboBox>

            <Label Grid.Column="0" Grid.Row="1" ToolTip="{StaticResource PageOptics_Probe}" Content="Imaging Probe" />
            <ComboBox Margin="0" Grid.Column="1" Grid.Row="1" SelectedItem="{Binding Path=ImagingProbe, Mode=TwoWay}">
                <sys:String>Micro probe</sys:String>
                <sys:String>Nano probe</sys:String>
            </ComboBox>

            <Label Grid.Column="0" Grid.Row="2" ToolTip="{StaticResource PageOptics_SpotSize}" Content="Spot Size" />
            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=SpotSize, UpdateSourceTrigger=LostFocus,StringFormat=N0}"/>

            <Label Grid.Column="0" Grid.Row="3" ToolTip="{StaticResource PageOptics_C2Aperture}" Content="C2 Aperture (µm)" />
            <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=C2Aperture, UpdateSourceTrigger=LostFocus,StringFormat=N2}"/>

            <Label Grid.Column="0" Grid.Row="4" ToolTip="{StaticResource PageOptics_C2LensPower}" Content="C2 Lens Power %" />
            <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Path=C2LensPower, UpdateSourceTrigger=LostFocus,StringFormat=N2}"/>

            <Label Grid.Column="0" Grid.Row="5" ToolTip="{StaticResource PageOptics_IlluminatedArea}" Content="Illuminated Area (µm)" />
            <TextBox Grid.Column="1" Grid.Row="5" Text="{Binding Path=IlluminatedArea, UpdateSourceTrigger=LostFocus,StringFormat=N2}"/>

            <Label Grid.Column="0" Grid.Row="6" ToolTip="{StaticResource PageOptics_ObjectiveAperture}" Content="Objective Aperture (µm)" />
            <TextBox Grid.Column="1" Grid.Row="6" Text="{Binding Path=ObjectiveAperture, UpdateSourceTrigger=LostFocus,StringFormat=N2}"/>

            <Label Grid.Column="0" Grid.Row="7" ToolTip="{StaticResource PageOptics_EnergyFilterSlitWidth}" Content="Energy filter slit width (eV)" />
            <TextBox Grid.Column="1" Grid.Row="7" Text="{Binding Path=EnergyFilterSlitWidth, UpdateSourceTrigger=LostFocus,StringFormat=N2}"/>

            <Label Grid.Column="0" Grid.Row="8" ToolTip="{StaticResource PageOptics_AccelerationVoltage}" Content="Acceleration Voltage (kV)"/>
            <TextBox Grid.Column="1" Grid.Row="8" Text="{Binding Path=Voltage, UpdateSourceTrigger=LostFocus,StringFormat=N0}"/>

            <Label Grid.Column="0" Grid.Row="9" ToolTip="{StaticResource PageOptics_PhasePlate}" Content="Using phase plate?"/>
            <ComboBox Margin="0" Grid.Column="2" Grid.Row="9" SelectedItem="{Binding Path=UsingPhasePlate, Mode=TwoWay}">
                <sys:String>No</sys:String>
                <sys:String>Yes</sys:String>
            </ComboBox>

        </Grid>

        <!-- Navigation -->
        <Button Click="Previous" Grid.Column="1" Grid.Row="3" Margin="0,20,50,0" Width="125" Height="25" HorizontalAlignment="Left">Previous Page</Button>
        <Button Click="Next" Grid.Column="1" Grid.Row="3" Margin="0,20,50,0" Width="125" Height="25" HorizontalAlignment="Right">Next Page</Button>

        <Grid.Background>
            <ImageBrush ImageSource="beta_galactosidase.png"/>
        </Grid.Background>
    </Grid>
</Page>
