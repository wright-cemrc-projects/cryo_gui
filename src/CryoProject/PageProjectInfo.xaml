<Page x:Class="CryoProject.PageProjectInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryoProject" xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="Data Collection">

    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition Width="600"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="325"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- People list -->
        <Border Grid.Row="1" Padding="5" Background="#4E87D4" Grid.ColumnSpan="2" Margin="90,0,0.4,0.2">
            <Label VerticalAlignment="Center" Foreground="White">Project</Label>
        </Border>

        <Grid Grid.Row="1" Background="White" Grid.ColumnSpan="2" Margin="90,35,0.4,0.2" Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="37*" />
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="50" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2">Date</Label>
            <TextBox Grid.Column="2" Grid.Row="0" Text="{Binding Path=Date, StringFormat='yyyy-MM-dd HH:mm:ss '}" Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">Instrument Operator (NetID)</Label>
            <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding Path=Operator, UpdateSourceTrigger=PropertyChanged}"  Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="2" Content="Globus User (NetID)" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding Path=User, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="3" Content="Group (Last name or Company)" Grid.ColumnSpan="2"  Grid.RowSpan="2"/>
            <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding Path=Group, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Margin="0,0.2">Sample Description</Label>
            <TextBox Grid.Column="2" Grid.Row="4" Text="{Binding Path=SampleDescription, UpdateSourceTrigger=PropertyChanged}"  Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Margin="0,50.2,0,0" Grid.RowSpan="2">Type of Grid</Label>
            <TextBox Grid.Column="2" Grid.Row="4" Text="{Binding Path=TypeOfGrid, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Margin="0,0,0,24.6" Grid.RowSpan="2">Reference Description</Label>
            <TextBox Grid.Column="2" Grid.Row="6" Text="{Binding Path=ReferenceDescription, UpdateSourceTrigger=PropertyChanged}"  Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" Margin="0,0.2,0,24.4" Grid.RowSpan="2">Experiment Purpose</Label>
            <TextBox Grid.Column="2" Grid.Row="7" Text="{Binding Path=PurposeDescription, UpdateSourceTrigger=PropertyChanged}" Grid.RowSpan="2"/>

            <Label Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2" Margin="0,0.4">Data Collection Software</Label>
            <ComboBox Margin="0,0.4" Grid.Column="2" Grid.Row="8" SelectedItem="{Binding Path=TypeOfSoftware, Mode=TwoWay}">
                <sys:String>SerialEM</sys:String>
                <sys:String>EPU</sys:String>
            </ComboBox>

            <!-- View report button -->
            <Label Grid.Column="2" Grid.Row="8" Content="{Binding Path=LocationProject}" Margin="0,24.4,0,0.4" Grid.RowSpan="2"></Label>
            <Button Click="ChooseProjectDirectory" Grid.Column="2" Grid.Row="9" Margin="0,37.6,20,37.4" Width="247" Height="25" HorizontalAlignment="Right">Choose Project Directory (YYYY-MM-DD)</Button>

        </Grid>

        <!-- View report button -->
        <Button Click="Next" Grid.Column="1" Grid.Row="4"  Width="125" HorizontalAlignment="Right" Margin="0,7.4,0.4,1.6">Next Page</Button>

        <Grid.Background>
            <ImageBrush ImageSource="beta_galactosidase.png"/>
        </Grid.Background>
    </Grid>
</Page>
